    <UIRef Id="WixUI_Mondo" />
    <!--Binary Id="vcredist_x64.exe"
      SourceFile="C:\Program Files (x86)\Microsoft SDKs\Windows\v7.0A\Bootstrapper\Packages\vcredist_x64\vcredist_x64.exe"/> 
    <CustomAction Id="InstallX64VCRedist" BinaryKey="vcredist_x64.exe" ExeCommand="/quiet /norestart"
       Execute="deferred" Impersonate="no" Return="ignore"/--> 

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Merge Id='CRT' Language='0' SourceFile='$(var.MergeModules)_CRT_x86.msm' DiskId='1'/>
      <Merge Id='CRTDebug' Language='0' SourceFile='$(var.MergeModules)_DebugCRT_x86.msm' DiskId='1'/>
      <!--?if $(var.Platform) = "x64" ?>
      <Merge Id='CRT64' Language='0' SourceFile='$(var.MergeModules)_CRT_x64.msm' DiskId='1'/>
